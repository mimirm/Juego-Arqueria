public class Arcos // Esta clase contiene los metodos para modificar el tiro segun el nivel del tirador
{
    double x1, y1; 
    public Arcos (){
        x1 = 0.0;
        y1 = 0.0;
    }

    public double signoRandom(double x){  // Este metodo elige aleatoriamente si el valor de entrada es negativo o positivo
        int i = 0;
        double y = 0;
        i = (int) (Math.random()*2)+1;
        if (i == 1){
            y = x * -1;
        }
        else{
            y = x;
        }
        return y;
    }

    public void arcoNovato(double x0, double y0){   // Metodo que calcula el error del tiro dependiendo de la habilidad del tirador, elige un numero aleatorio entre 0 y el margen, luego elige si es positivo o negativo
        x1 = 0;
        y1 = 0;
        x1 = x0 + signoRandom(Math.random() * 1);
        y1 = y0 + signoRandom(Math.random() * 1);
    }

    public void arcoIntermedio(double x0, double y0){  
        x1 = 0;
        y1 = 0;
        x1 = x0 + signoRandom(Math.random() * 0.25);
        y1 = y0 + signoRandom(Math.random() * 0.25);
    }

    public void arcoProfesional(double x0, double y0){  
        x1 = 0;
        y1 = 0;
        x1 = x0 + signoRandom(Math.random() * 0.05);
        y1 = y0 + signoRandom(Math.random() * 0.05);
    }

    public double getX1(){
        return x1;
    }

    public double getY1(){
        return y1;
    }
}
