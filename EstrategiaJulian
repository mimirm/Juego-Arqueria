public class EstrategiaJulian{
    private Arcos arco;
    private double tirox , tiroy;
    private int jugador;
    
    public EstrategiaJulian(){
        tirox = 0;
        tiroy = 0;
        jugador = jugador = (int) (Math.random()*3)+1;
        arco = new Arcos();
    }
    
    public void tirar(int setActual, int tiroActual, double x2, double y2){
        tirox = (int) ((Math.random()*2)-0.5);
        tiroy = (int) ((Math.random()*2)-0.5);
    }
    
    public double getTiroX(){
        return tirox;
        
    }
    public double getTiroY(){
        return tiroy;
        
    }
}
