import javax.swing.JOptionPane;
public class Interfaz {
    private int Opcion;

    public void setOpcion(int Opcion){
        this.Opcion = Opcion;
    }
    public int getOpcion(){
        return Opcion;
    }

    public int EscogerOpcion(String mensaje){
       int numero = -14;
       
       String respuesta = JOptionPane.showInputDialog(null, mensaje, 
            "Menu",JOptionPane.QUESTION_MESSAGE);
       try {
          numero = Integer.parseInt( respuesta );  
       }
       catch(Exception e){
          numero = -14;
       }
              
       return numero;
    }
    
    
    //separo lo del joption pane para que no sea muy largo xd
    public int ConfigurarSets(){
        int numero = 2;
        
        String respuesta = JOptionPane.showInputDialog(null,"Digite la cantidad de sets para el juego: ",
                            "Configurar Sets",JOptionPane.QUESTION_MESSAGE);
        try {
            numero = Integer.parseInt(respuesta);
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,
                "Se configuraron 2 sets por default al notar que no se ingreso un numero entero.");
            numero = 2;
        }
        return numero;  
    }
    
    public int ConfigurarTiros(){
        int numero = 3;
        
        String respuesta = JOptionPane.showInputDialog(null,"Digite la cantidad de tiros para el juego",
                            "Configurar Tiros",JOptionPane.QUESTION_MESSAGE);
        try {
            numero = Integer.parseInt(respuesta);
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,"Se configuraron 3 tiros por default al notar que no se ingreso un numero entero.");
            numero = 3;
        }
        return numero;  
    }
    
    
    //el metodo para llamar desde el juego seria algo como jugador.Tirar( double x, double y) => jugador.Tirar(interfaz.PedirPunto(x),interfaz.PedirPunto(y))
    public double PedirPunto(String dato){
        String z = JOptionPane.showInputDialog(null,"Digite el valor "+dato+" para el punto de tiro (que sea dentro del rango de 0 a 1)",
                    "Tirar",JOptionPane.QUESTION_MESSAGE);
        double c = Double.parseDouble(z);               
        return c;
    }
    
    public void VerPuntaje(String mensaje){
        JOptionPane.showMessageDialog(null,mensaje);
    }
    
    public void adios(){
       JOptionPane.showMessageDialog(null,"Adios vaquero");
    }


}
