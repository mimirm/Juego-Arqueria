import javax.swing.JOptionPane;
import java.util.Scanner;
public class Interfaz {
    private boolean usarGrafica;
    Scanner input;
    
    /* 
    * Método constructor, recibe los argumentos que se ingresan al main para que el usuario decida si quiere una interfaz gráfica o desde la terminal.
    */
    public Interfaz(int args_count){
        if(args_count == 0){
            usarGrafica = true;
        }
        else{
            usarGrafica = false; 
            input = new Scanner(System.in);
        }
    }
    
    //Estos métodos reciben un string para desplegarlo, ya sea en un pánel o en la terminal.
    public void displayMessage(String mensaje){
        if(usarGrafica){
            JOptionPane.showMessageDialog(null, mensaje);
        }
        else{
            System.out.println(mensaje);
        }
    }
    public String askInfo(String mensaje){
        String entrada;
        if(usarGrafica){ 
            entrada = JOptionPane.showInputDialog(
                       null,
                       mensaje,
                       JOptionPane.QUESTION_MESSAGE);
        }
        else{
            System.out.println(mensaje);
            entrada = input.next();
        }
        return entrada;
    }

}
