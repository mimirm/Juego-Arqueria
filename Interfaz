import javax.swing.JOptionPane;
import java.util.Scanner;
public class Interfaz {
    private boolean usarGrafica;
    Scanner input;

    public Interfaz(int args_count){
        if(args_count == 0){
            usarGrafica = true;
        }
        else{
            usarGrafica = false; 
            input = new Scanner(System.in);
        }
    }
    
    /*
    *   @Funcion: Este metodo le muestra el mensaje al usuario segun la 
    *             interfaz activada.
    *   @Param: String mensaje que contiene el mensaje que se desea mostrar
    */
    public void displayMessage(String mensaje){
        if(usarGrafica){
            JOptionPane.showMessageDialog(null, mensaje);
        }
        else{
            System.out.println(mensaje);
        }
    }
    /*
    *   @Funcion: Muestra al usuario un mensaje, le pide a este
    *             que ingrese la informacion deseada.
    *   @Param: String mensaje que contiene el mensaje que se desea mostrar
    *   @Return: String entrada que contiene lo que el usurio ingreso ante la pregunta.
    */
    public String askInfo(String mensaje){
        String entrada;
        if(usarGrafica){ 
            entrada = JOptionPane.showInputDialog(
                       null,
                       mensaje,
                       JOptionPane.QUESTION_MESSAGE);
        }
        else{
            System.out.println("\n"+mensaje);
            entrada = input.next();
        }
        return entrada;
    }

}
