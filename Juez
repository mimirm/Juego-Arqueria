public class Juez{
    //Blanco blanco;
    private double x2, y2, puntosHumanos, puntosRobot, puntosMasAltos, puntosTiro;
    private int cantSets, cantTiros;
    private String puntajeMasAlto, jugadorMasAlto;
    
    public Juez (){
       // blanco = new Blanco();
        cantSets = 2;
        cantTiros = 3;
    }
    
    public void setTiroPrevio(double x2, double y2){
        this.x2 = x2;
        this.y2 = y2;
    }
    public double getX2(){
        return x2;
    }
     public double getY2(){
        return y2;
    }
    public void setPuntosDelTiro(double puntosTiro){
        this.puntosTiro = puntosTiro;
    }
    
    public void contadorPuntosHumanos (){
    
     }
    
    public void setPuntosMasAltos(double puntosFinales){
        this.puntosMasAltos = puntosFinales;
    }
    
    public void setJugadorMasAlto(String jugadorMasAlto){
        this.jugadorMasAlto = jugadorMasAlto;
    }
    
    public String darPuntajeMasAlto(){   //Para que cerebro pueda ver cuales son
        puntajeMasAlto = "El puntaje mas alto es:" + puntosMasAltos+ "\nPor:"+jugadorMasAlto;
        return puntajeMasAlto;
    }

    public void cambiarSets(int cantSets){        //Metodos para cambiar cantidad de sets y tiros
        this.cantSets = cantSets;
    }
    
    public void cambiarTiros(int cantTiros){
        this.cantTiros = cantTiros;
    }
    
    public int getSets(){
        return cantSets;
    }
    
    public int getTiros(){
        return cantTiros;
    }
}
