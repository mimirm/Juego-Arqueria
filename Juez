public class Juez{
    private Blanco blanco;
    private double x2Humano, y2Humano, x2IA, y2IA, puntosHumanos, puntosIA, puntosMasAltos, puntosTiro;
    private String puntajeMasAlto, jugadorMasAlto;
    private boolean empate;
    
    //Constructor
    public Juez (){
       blanco = new Blanco();
       empate = false;
    }

     //Partida le da donde cae la flecha humana
    public void setX2Humano(double x2){
        this.x2Humano = x2;
    }
     public void setY2Humano(double y2){
        this.y2Humano = y2;
    }
    
    //juez calcula los puntos del usuario usando blanco
    public void sumarPuntosHumanos (){
        double porSumar = blanco.calcularPuntos(x2Humano, y2Humano);
        puntosHumanos += porSumar;
    }
    
    //Partida le da donde cae la flecha IA
    public void setX2IA(double x2){
        this.x2IA = x2;
    }
     public void setY2IA(double y2){
        this.y2IA = y2;
    }
    
    //juez calcula los puntos de IA usando blanco
    public void sumarPuntosIA (){
        double porSumar = blanco.calcularPuntos(x2IA, y2IA);
        puntosIA += porSumar;
    }
    
    //Para que el usuario se guie
    public String devolverInformacion(){
       String mensaje = "La flecha cayo en: (" + x2Humano + " ,"+ y2Humano + ").\nSu puntaje actual es: "+ puntosHumanos + ". ";
       return mensaje;
    }
    
    //Guarda informacion del puntaje mas alto 
    public void setPuntosMasAltos(double puntosFinales){
        this.puntosMasAltos = puntosFinales;
    }
    public void setJugadorMasAlto(String jugadorMasAlto){
        this.jugadorMasAlto = jugadorMasAlto;
    }
    
    //Genera string que dice la info del puntaje mas alto
    public String darPuntajeMasAlto(){   //Para que cerebro pueda ver cuales son
        puntosMasAltos=puntosHumanos;
        puntajeMasAlto = "El puntaje mas alto es:" + puntosMasAltos + "\nPor: "+jugadorMasAlto;
        return puntajeMasAlto;
    }
    
    public String decidirGanador(){
        String mensaje = "El ganador es: ";
        if ( puntosHumanos > puntosIA){
            mensaje += " Usted!\nCon "+ puntosHumanos + " puntos. "+ "\n Su rival obtuvo: " + puntosIA;
            
        } 
        if ( puntosHumanos < puntosIA){
            mensaje += " la computadora :(\nCon "+ puntosIA + " puntos. "+ "\n Usted obtuvo: " + puntosHumanos;
        }
        if (puntosHumanos == puntosIA){
            mensaje = "Empate. Pasa a desempate";
            empate = true;
        }
        return mensaje;
    }
}
