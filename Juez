public class Juez{
    //Blanco blanco;
    private double x2, y2, puntosHumanos, puntosRobot, puntosMasAltos;
    private int cantSets, cantTiros;
    private String puntajeMasAlto, jugadorMasAlto;
    
    public Juez (){
       // blanco = new Blanco();
        cantSets = 2;
        cantTiros = 3;
    }

    public void contadorPuntosHumanos (){
    
     }
    
    public void setPuntosMasAltos(double puntosFinales){
        this.puntosMasAltos = puntosFinales;
    }
    
    public void setJugadorMasAlto(String jugadorMasAlto){
        this.jugadorMasAlto = jugadorMasAlto;
    }
    
    public String puntajeMasAlto(){   //Para que cerebro pueda ver cuales son
        puntajeMasAlto = "El puntaje mas alto es:" + puntosMasAltos+ "\nPor:"+jugadorMasAlto;
        return puntajeMasAlto;
    }

    public void cambiarSets(){        //Metodos para cambiar cantidad de sets y tiros
        this.cantSets = cantSets;
    }
    
    public void cambiarTiros(){
        this.cantTiros = cantTiros;
    }
    
    public int getSets(){
        return cantSets;
    }
    
    public int getTiros(){
        return cantTiros;
    }
}
